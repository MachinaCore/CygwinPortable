//include "Consts.fmi"
const ConEmu   = 0x43454D55

macro Descr="ConEmu: Increase ConEmu font size"
  Key="CtrlMsWheelUp"
{{
  callplugin(#%ConEmu,"FontSetSize(1,2)")
}}

macro Descr="ConEmu: Increase ConEmu font size"
  Key="CtrlMsWheelDown"
{{
  callplugin(#%ConEmu,"FontSetSize(1,-2)")
}}
